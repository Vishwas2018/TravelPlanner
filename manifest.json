{
  "name": "Travel Itinerary Manager",
  "short_name": "Travel Manager",
  "description": "A modern travel itinerary manager with Excel/CSV import/export capabilities",
  "version": "2.0.0",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#667eea",
  "theme_color": "#667eea",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["travel", "productivity", "utilities"],
  "screenshots": [
