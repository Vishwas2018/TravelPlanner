    {
      "src": "assets/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Add Activity",
      "short_name": "Add",
      "description": "Quickly add a new travel activity",
      "url": "/?action=add",
      "icons": [
        {
          "src": "assets/icons/add-activity.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "View Dashboard",
      "short_name": "Dashboard",
      "description": "View travel overview dashboard",
      "url": "/?view=dashboard",
      "icons": [
        {
          "src": "assets/icons/dashboard.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Import Data",
      "short_name": "Import",
      "description": "Import travel data from files",
      "url": "/?action=import",
      "icons": [
        {
          "src": "assets/icons/import.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": [".csv", ".xlsx", ".xls", ".json"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "application/json": [".json"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+travel",
      "url": "/?protocol=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}